{
  appId: "com.reorproject.reor",
  asar: true,
  directories: {
    output: "release/${version}",
  },
  files: ["dist-electron/**/*", "dist/**/*"],
  mac: {
    artifactName: "${productName}_${version}.${ext}",
    // arch: ["arm64"],
    target: ["dmg", "zip"],
  },
  win: {
    artifactName: "${productName}_${version}.${ext}",
    target: [
      {
        target: "nsis",
        arch: ["x64"],
      },
    ],
  },
  nsis: {
    oneClick: false,
    perMachine: false,
    allowToChangeInstallationDirectory: true,
    deleteAppDataOnUninstall: false,
  },
  linux: {
    artifactName: "${productName}_${version}.${ext}",
    target: [
      {
        target: "AppImage",
        arch: ["x64", "arm64"], // Specify architectures as needed
      },
    ],
    category: "Productivity", // Change as appropriate for your app
    synopsis: "Self-organizing note-taking app",
    description: "A self-organizing note-taking app that is fully private and powered by local AI models.",
    desktop: {},
    artifactName: "${productName}_${version}.${ext}",
  },
  publish: {
    provider: "github",
    repo: "reor",
    owner: "reorproject",
    releaseType: "draft",
  },
}
